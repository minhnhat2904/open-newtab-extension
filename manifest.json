{
    "manifest_version": 2,

    "name": "Open New Tab By Nhat",
    "description": "Customize open new tab",
    "version": "1.0",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "browser_action": {
        "default_icon": "./image/icon.png"
    },

    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}